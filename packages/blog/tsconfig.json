{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler", //让 TypeScript 支持导入 .ts 结尾的文件。
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true, //  让 TypeScript 不生成 .js/.d.ts 输出
    "strict": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["element-plus/global"],
    "paths": {
      "@/*": ["./src/*"],
      "@sun-world/editor": ["../editor/src"]
    }
  },
  "include": ["src", "node_modules/element-plus/global.d.ts"]
}
