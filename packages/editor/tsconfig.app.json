{
  "compilerOptions": {
    // 基础配置
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Monorepo 和路径
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // 保持对内部 @/ 别名的支持
    },

    // 编译输出相关
    "declaration": true, // 必须为 true，但实际由 vite-plugin-dts 处理
    "skipLibCheck": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts"]
}
